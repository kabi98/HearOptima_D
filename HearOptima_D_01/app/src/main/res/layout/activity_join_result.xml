<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hearoptima_d_login_background"
    tools:context=".views.Common.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@drawable/white_btn"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/purple"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:text="회원가입이">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/purple"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:text="완료되었습니다">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:text="아이디는 ">
                </TextView>

                <TextView
                    android:id="@+id/TextJoinResultPhoneId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/purple"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:text="01012345678">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:text="비밀번호는 ">
                </TextView>

                <TextView
                    android:id="@+id/TextJoinResultPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/purple"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:text="123456">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:text=" 입니다">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:text=" 아이디는 휴대폰 번호,  ">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:text=" 비밀번호는 생년월일 6자리로 ">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:text=" 자동생성 됩니다. ">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/AppBtnJoinResultGoLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@drawable/purple_btn"
                    android:fontFamily="@font/pretendardbold"
                    android:text="로그인하러 가기"
                    android:textSize="17dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>