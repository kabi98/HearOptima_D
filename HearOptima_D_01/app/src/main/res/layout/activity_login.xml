<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hearoptima_d_login_background"
    tools:context=".views.Common.LoginActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.111">

        <TextView
            android:text="로그인"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/EditId"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_gray_background"
            android:drawableStart="@drawable/id_icon2"
            android:drawablePadding="10dp"
            android:hint="아이디를 입력하세요."
            android:inputType="textNoSuggestions|text"
            android:padding="12dp"
            android:text=""
            android:textColorHint="@color/gray3"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/EditPw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_gray_background"
            android:drawableStart="@drawable/ps_icon2"
            android:drawablePadding="10dp"
            android:hint="비밀번호를 입력하세요."
            android:textColorHint="@color/gray3"
            android:inputType="textNoSuggestions|textPassword"
            android:padding="12dp"
            android:textSize="18sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_purple_background"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

        <TextView
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="아이디 또는 비밀번호가 일치하지 않습니다."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.6dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#A7A7A7">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="0.3333">

                <ImageButton
                    android:id="@+id/id_findbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="#00ff0000"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/id_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.65"
                    tools:ignore="SpeakableTextPresentCheck"></ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3333">

                <ImageButton
                    android:id="@+id/pw_findbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="#00ff0000"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    android:src="@drawable/password_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.65"
                    tools:ignore="SpeakableTextPresentCheck"></ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3333">

                <ImageButton
                    android:id="@+id/joinBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="#00ff0000"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    android:src="@drawable/join_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.65"
                    tools:ignore="SpeakableTextPresentCheck"></ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>